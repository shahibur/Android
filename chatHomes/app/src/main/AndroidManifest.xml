<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lenovo.mychat">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/mychat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mychat"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.example.lenovo.chathomes.MyChat_offline"
        >
        <activity android:name="com.example.lenovo.chathomes.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.lenovo.chathomes.MainActivity" />
        <activity android:name="com.example.lenovo.chathomes.StartPageActivity" />
        <activity
            android:name="com.example.lenovo.chathomes.LoginActivity"
            android:parentActivityName="com.example.lenovo.chathomes.StartPageActivity" />
        <activity
            android:name="com.example.lenovo.chathomes.RegisterActivity"
            android:parentActivityName="com.example.lenovo.chathomes.StartPageActivity" />
        <activity android:name="com.example.lenovo.chathomes.SettingsActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.example.lenovo.chathomes.StatusActivity"
            android:parentActivityName="com.example.lenovo.chathomes.SettingsActivity" />
        <activity
            android:name="com.example.lenovo.chathomes.AllUsersActivity"
            android:parentActivityName="com.example.lenovo.chathomes.MainActivity" />
        <activity android:name="com.example.lenovo.chathomes.ProfileActivity"></activity>
    </application>

</manifest>