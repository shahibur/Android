<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page"
    android:paddingBottom="2dp"
    tools:context="com.example.lenovo.chathomes.StartPageActivity">

    <Button
        android:id="@+id/button_alreadAccount"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_above="@+id/buttonNeedAccount"
        android:layout_alignStart="@+id/buttonNeedAccount"
        android:layout_marginBottom="24dp"
        android:background="@color/common_google_signin_btn_text_dark_default"
        android:padding="2dp"
        android:paddingLeft="20dp"
        android:text="Already Have an account?"
        android:textColor="@color/colorPrimary"
        android:textSize="19sp" />

    <Button
        android:id="@+id/buttonNeedAccount"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:paddingLeft="2dp"
        android:text="need new account?"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />
</RelativeLayout>
