<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.imageview.MainActivity">


    <ImageView
        android:id="@+id/icon_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="99dp"
        android:layout_marginEnd="42dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="28dp"
        android:foregroundGravity="center"

        app:layout_constraintBottom_toTopOf="@+id/textView_decr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/shawon01" android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="194dp"
        android:layout_marginEnd="24dp"
        android:text="@string/shahibur_rahman"
        android:textColor="@color/colorAccent"
        android:textSize="33sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/icon_image"
        app:layout_constraintTop_toBottomOf="@+id/icon_image"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/textView_decr"
        android:layout_width="wrap_content"
        android:layout_height="132dp"
        android:layout_margin="1sp"
        android:layout_marginBottom="444sp"

        android:layout_marginTop="100dp"
        android:padding="2sp"
        android:text="@string/textview_descr"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/icon_image" />
</android.support.constraint.ConstraintLayout>
